<% include ./header %>

<div class="container-fluid search-content">
  <div class="col-sm-3 col-xs-6 sidebar-pantry">
    <form action="/searchc" method="POST"">
      <p><input type="text" name="main" class="form-control" placeholder="Chicken..."></p>
      <p><input type="text" name="ingredient1" class="form-control" placeholder="First Ingredient"></p>
      <p><input type="text" name="ingredient2" class="form-control" placeholder="Second Ingredient"></p>
      <p><input type="text" name="ingredient3" class="form-control" placeholder="Third Ingredient"></p>
      <p><input type="text" name="allergy1" class="form-control" placeholder="First Allergy"></p>
      <p><input type="text" name="allergy2" class="form-control" placeholder="Second Allergy"></p>
      <p><input type="text" name="allergy3" class="form-control" placeholder="Third Allergy"></p>
      <button type="submit" class="btn btn-default">GO!</button>
    </form>
  </div>
  <div class="col-xs-12 col-sm-9">
    <div class="row">
      <% recipes.forEach(recipe => { %>
        <div class="col-lg-4 col-xs-6 portfolio-item">
          <div class="recipe-image-cropper">
            <img src ="<%= recipe.image %>" class="img-responsive" size="40x40">
          </div>
        <div class="portfolio-caption">
          <h4><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h4>
          <p class="text-muted"><strong>Missing ingredients:</strong></p>
          <% recipe.missedIngredients.forEach(r => { %>
            <%= r.name %>,
          <% }) %>
          <% if (user) { %>
            <a href="/recipes/<%= recipe.id %>/fav">Add to Favs</a>
          <% } %>
          <!-- <p class="text-muted">COOK TIME: <%#= recipe.readyInMinutes %></p><br> -->
          <!-- <p class="text-muted"><strong>Ingredients: </strong> -->
            <%#= recipe.extendedIngredients.map(ing => ing.name).join(', ') %>
          <!-- </p> -->
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

</body>
</html>
